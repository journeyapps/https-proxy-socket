{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es2016"],
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "outDir": "lib",
    "rootDir": "src",
    "allowJs": false,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
